<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingVertical="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardAvatar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:cardCornerRadius="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_test"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="260dp"
        android:paddingVertical="8dp"
        android:paddingHorizontal="12dp"
        android:text="Message"
        android:textColor="#000000"
        android:textSize="16sp"
        android:background="@drawable/bg_rectangle_conner_12dp"
        app:layout_constraintStart_toEndOf="@id/cardAvatar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/white_F7"
        android:layout_marginStart="5dp"/>

    <TextView
        android:id="@+id/txtTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8:00"
        android:textColor="#C0C0C0"
        android:textSize="10sp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="@id/txtContent"
        app:layout_constraintBottom_toTopOf="@id/txtContent"
        android:visibility="gone"/>


</androidx.constraintlayout.widget.ConstraintLayout>